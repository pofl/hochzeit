---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="preconnect" href="https://fonts.bunny.net" />
    <link
      href="https://fonts.bunny.net/css?family=dm-sans:300,600|playfair-display:400|tangerine:400"
      rel="stylesheet"
    />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    line-height: 1.6;
    text-align: start;
    font-size: 18px;
    font-family: "DM Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 300;
    font-style: normal;
    font-variation-settings: "wdth" 100;

    --highlight: #ff7722;
    --highlight-dark: #ff5500;
    --bg-highlight: color-mix(in srgb, var(--highlight), white 90%);
  }
  body {
    max-width: 35rem;
    margin: 40px auto;
    color: #444;
    padding: 1rem;
  }
  h1,
  h2,
  h3 {
    line-height: 1.2;
    font-family: "Playfair Display", serif;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
  }
  h1 {
    font-size: 1.75rem;
  }
  h2 {
    font-size: 1.5rem;
  }
  h3 {
    font-size: 1.25rem;
  }
  strong {
    font-weight: 600;
  }
  a {
    text-decoration: none;
    color: var(--highlight-dark);
    &:hover {
      text-decoration: underline;
    }
  }

  blockquote {
    border-left: 4px solid var(--highlight);
    margin-left: 0;
    margin-right: 0;
    padding: 0.5em 0.5em 0.5em 1em;
    background-color: var(--bg-highlight);

    & > *:first-child {
      margin-top: 0;
    }
    & > *:last-child {
      margin-bottom: 0;
    }
  }
</style>
