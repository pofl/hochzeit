---
interface Person {
  name: string;
  teilnahme: string;
  reisepass: string;
  geburtsurkunde: string;
  eVisa: string;
}

interface Props {
  people: Person[];
}

const { people } = Astro.props;
const headers = ["Name", "Teilnahme", "Reisepass", "Geburtsurkunde", "eVisa"];
---
<section class="attendance-table" aria-label="Reisedokumentenstatus">
  <div class="table-wrapper">
    <table>
      <thead>
        <tr>
          {headers.map((header) => (
            <th>{header}</th>
          ))}
        </tr>
      </thead>
      <tbody>
        {people.map((person) => (
          <tr>
            <td>{person.name}</td>
            <td>{person.teilnahme}</td>
            <td>{person.reisepass}</td>
            <td>{person.geburtsurkunde}</td>
            <td>{person.eVisa}</td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</section>

<style>
  .attendance-table {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .table-wrapper {
    overflow-x: auto;
    border-radius: .5rem;
    background: #f9f6f1;
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.05);
  }

  table {
    width: 100%;
    min-width: 600px;
    border-collapse: collapse;
    font-size: 0.95rem;
  }

  th,
  td {
    padding: 0.85rem 1rem;
    text-align: left;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  thead th {
    font-weight: 600;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    font-size: 0.8rem;
    color: #a15b00;
  }

  tbody tr:nth-child(even) {
    background: #fff;
  }

  tbody tr:nth-child(odd) {
    background: #f5efe7;
  }

  @media (max-width: 640px) {
    th,
    td {
      padding: 0.7rem 0.6rem;
      font-size: 0.85rem;
    }

    .table-caption {
      font-size: 0.8rem;
    }
  }
</style>
